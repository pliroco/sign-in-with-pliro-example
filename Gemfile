source 'https://rubygems.org'

ruby '3.4.2'

# Web application DSL
gem 'sinatra'
gem 'rackup', '~> 2.2'

# Web server
gem 'puma'

# Rack middleware and utilities
gem 'rack-contrib'

# Decode JSON Web Tokens (RFC 7519)
gem 'jwt'

# Redis client
gem 'redis'

# Exception monitoring
gem 'honeybadger'

# Load environment variables from .env and .env.local
gem 'dotenv', group: :development
